{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"rmdist": "rimraf packages/**/dist",
		"lint": "eslint packages --fix --ext js,jsx,ts,tsx",
		"test": "jest",
		"style": "prettier --write --loglevel=warn packages/**/*.{js,ts,md,json}",
		"build": "lerna run build --parallel",
		"clean": "lerna run clean --parallel",
		"docs": "typedoc",
		"prepublishOnly": "yarn build",
		"commit": "git-cz",
		"cz": "git-cz",
		"up": "yarn upgrade-interactive --latest",
		"scripts:validateNoOnly": "node scripts/validateNoOnly.mjs"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.0.1",
		"@commitlint/config-conventional": "^9.0.1",
		"@skyra/eslint-config": "^5.2.1",
		"@types/jest": "^26.0.3",
		"@types/node": "^14.0.22",
		"@typescript-eslint/eslint-plugin": "^3.6.0",
		"@typescript-eslint/parser": "^3.6.0",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^7.4.0",
		"glob": "^7.1.6",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"jest-circus": "^26.1.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.1",
		"typedoc": "~0.16",
		"typedoc-plugin-lerna-packages": "^0.3.0",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^3.9.6"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3"
	}
}
